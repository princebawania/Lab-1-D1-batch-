#include <simplecpp>
main_program{
    int n;
    cout << "Enter the number of rows: ";
    cin >> n;
    for (int i = 1; i <= n; i++) {
       
        for (int j = 1; j <= n - i; j++) {
            cout << "_";
        }
        for (int j = 1; j <= 2 * i - 1; j++) {
            cout << "*";
        }
        for (int j = 1; j <= n - i; j++) {
            cout << "_";
        }
        cout << endl;
    }

    return 0;
}
